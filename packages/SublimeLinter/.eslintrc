{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "globals": {
        "console": true,
        "angular": true,
        "window": true,
        "document": true,
        "_": true,
        "$": true,
        "jQuery": true,
        "moment": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            1,
            "single", {"avoidEscape": true, "allowTemplateLiterals": true}
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            1,
            "always-multiline"
        ],
        "no-console": [
            1
        ],
        "no-unused-vars": [
            1
        ]
    }
}
